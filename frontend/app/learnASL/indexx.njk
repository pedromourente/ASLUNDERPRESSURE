<body>
    {% include 'partials/_header.html' %}

    {# Skeleton Loading videos #}
    <section id="skeleton-cards" class="hidden flex justify-center align-center flex-wrap max-w-screen-xl mx-auto mt-10 gap-4">
        {% import 'components/skeletonCards.njk' as macro  %}

        {% for i in range(0, 12) -%}
            {{ macro.skeletonCard() }}
        {%- endfor %}
        
    </section>
    {# videos #}
    <section id="paginated-video" class="flex justify-center align-center flex-wrap max-w-screen-xl mx-auto mt-10 gap-4">
        {# add all videos through javascript #}

        {# {% import 'components/videoCards.njk' as macro  %}
        {{ macro.videoCard('https://i.ytimg.com/vi/ZTQ_eawsM6I/maxresdefault.jpg?sqp=-oaymwEmCIAKENAF8quKqQMa8AEB-AH-CYAC0AWKAgwIABABGGUgTShFMA8=&rs=AOn4CLDQyvCNxk1xBGv5Qp_e8y_hfOup2A','scads of fish,scads and scads of fish, scads and scads and scads of fish','https://www.youtube.com/watch?v=ZTQ_eawsM6I') }}

